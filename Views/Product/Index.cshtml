@model List<eCOMMERCEApplication.Models.tblProduct>
@{
    ViewBag.Title = "Index";
}

<h2>List of All Products</h2>

<table class="table table table-dark table-hover">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price of the Product</th>
        <th>Product Quantity</th>
        <th>Product Image</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.prod_id</td>
            <td>@item.prod_name</td>
            <td>@item.prod_price</td>
            <td>@item.prod_qty</td>
            <td>
                <img src="~/Content/Images/@item.prod_pic" alt="@item.prod_pic" width="100" height="100" />
            </td>
            <td>
                <a href="@Url.Action("Edit", "Product", new {@id = item.prod_id})" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Delete", "Product", new {@id = item.prod_id})" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this @item.prod_name ?')">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Add Product</a>
